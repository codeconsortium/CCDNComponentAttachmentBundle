{%- spaceless -%}
	{%- set route = app.request.attributes.get('_route') -%}

	<li class="nav-header">
		{{- 'sidebar.header.attachment' | trans({}, 'CCDNComponentAttachmentBundle') -}}
	</li>

	{%- if route == 'ccdn_component_attachment_index' -%}
		<li class="active">
			<a rel="nofollow" href="{{- path('ccdn_component_attachment_index') -}}">
				<i class="icon-white icon-file"></i>
				{{- 'link.manage' | trans({}, 'CCDNComponentAttachmentBundle') -}}
			</a>
		</li>
	{%- else -%}
		<li>
			<a rel="nofollow" href="{{- path('ccdn_component_attachment_index') -}}">
				<i class="icon-file"></i>
				{{- 'link.manage' | trans({}, 'CCDNComponentAttachmentBundle') -}}
			</a>
		</li>
	{%- endif -%}

	{%- if route == 'ccdn_component_attachment_upload' -%}
		<li class="active">
			<a rel="nofollow" href="{{- path('ccdn_component_attachment_upload') -}}">
				<i class="icon-white icon-upload"></i>
				{{- 'link.upload' | trans({}, 'CCDNComponentAttachmentBundle') -}}
			</a>
		</li>
	{%- else -%}
		<li>
			<a rel="nofollow" href="{{- path('ccdn_component_attachment_upload') -}}">
				<i class="icon-upload"></i>
				{{- 'link.upload' | trans({}, 'CCDNComponentAttachmentBundle') -}}
			</a>
		</li>
	{%- endif -%}

