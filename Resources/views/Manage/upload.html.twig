{% extends param('ccdn_component_attachment.manage.upload.layout_template') %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
{% endblock %}

{% block title %}{{- truncDot('title.attachment.upload' | trans({}, 'CCDNComponentAttachmentBundle'), param('ccdn_component_attachment.seo.title_length')) -}}{% endblock %}

{% block sidebar %}
	{{ parent() }}
	
	{%- include 'CCDNComponentAttachmentBundle:Sidebar:sidebar.html.twig' -%}	
	
{% endblock %}

{% block sidebar_status %}
	{{ parent() }}
	{%- spaceless -%}
	
	<div class="well" style="padding: 10px;{# height: 20px;#}">
		<span class="pull-left"><i class="icon-hdd"></i>&nbsp;{{- quotas['usedKiBPercent'] -}}&#37;&nbsp;</span>
		<div class="progress progress-danger">
			<div class="bar" style="width:{{- quotas['usedKiBPercent'] -}}%;"></div>
		</div>
		<hr>
		
		<span class="label">
			{{- quotas['usedKiB'] -}}KiB
			&nbsp;&#47;&nbsp;
			{{- quotas['maxKiB'] -}}KiB
		</span>&nbsp;
		
		<span class="label">
			{{- quotas['usedQuantity'] -}}
			&nbsp;&#47;&nbsp;
			{{- quotas['maxQuantity'] -}}&nbsp;{{- 'quota.files' | trans({}, 'CCDNComponentAttachmentBundle') -}}
		</span>
	</div>
	
	{%- endspaceless -%}
	
{% endblock %}


{% block body %}

	{%- spaceless -%}
	
	{%- include 'CCDNComponentCommonBundle:Flashes:flashes.html.twig' -%}

	{%- include 'CCDNComponentCrumbTrailBundle:Trail:trail.html.twig' with {'crumbs': crumbs } -%}

	<h2>{{- 'title.attachment.upload' | trans({}, 'CCDNComponentAttachmentBundle') -}}</h2>

	{%- form_theme form param('ccdn_component_attachment.manage.upload.form_theme') -%}
	<form action="{{- path('cc_attachment_upload') -}}" method="post" {{ form_enctype(form) }} class="form-horizontal">
		<fieldset>
	
			{{- form_errors(form) -}}
			
			<div class="control-group"><div class="controls row-fluid">{{- form_row(form._token) -}}</div></div>
			
			<div class="control-group{{- (form.attachment.vars.errors|length > 0) ? ' error': '' -}}">
				{{- form_label(form.attachment, null, { 'label': 'form.label.attachment.upload.file'| trans({}, 'CCDNComponentAttachmentBundle')}) -}}
				<div class="controls row-fluid">
					{{- form_errors(form.attachment) -}}
					{{- form_widget(form.attachment) -}}
				</div>
			</div>
			
			<div class="control-group{{- (form.description.vars.errors|length > 0) ? ' error': '' -}}">
				{{- form_label(form.description, null, { 'label': 'form.label.attachment.upload.description'| trans({}, 'CCDNComponentAttachmentBundle')}) -}}
				<div class="controls row-fluid">
					{{- form_errors(form.description) -}}
					{{- form_widget(form.description) -}}
				</div>
			</div>
			
			<div class="form-actions">
				<input type="submit" class="btn btn-primary" value="{{- 'form.button.attachment.upload' | trans({}, 'CCDNComponentAttachmentBundle') -}}">
			</div>
			
		</fieldset>
	</form>

	{%- include 'CCDNComponentCrumbTrailBundle:Trail:trail.html.twig' with {'crumbs': crumbs } -%}

	{%- endspaceless -%}

{% endblock %}