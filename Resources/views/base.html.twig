{% extends LayoutTemplate %}



{% block stylesheets %}
    {{ parent() }}
    <link href="{{- asset('bundles/ccdncomponentbbcode/css/bbcode.css') -}}" rel="stylesheet" type="text/css">
	{% block stylesheets_extra %}
	{% endblock stylesheets_extra %}
{% endblock stylesheets %}



{% block javascripts %}
	{{ parent() }}
	<script src="{{- asset('bundles/ccdncomponentcommon/js/ccdn/jquery.checkboxes.js') -}}" type="text/javascript"></script>
	{% block javascripts_extra %}
	{% endblock javascripts_extra %}
{% endblock javascripts %}



{% block tool_bar %}
	<div id="sub-nav" class="row-fluid">
	    <div class="span2">
			<h3>
				{% block sub_title %}
					<a href="{{ path('ccdn_component_attachment_index') }}">
						Attachments
					</a>
				{% endblock sub_title %}
			</h3>
		</div>

		<nav class="span10">
			{%- block crumb_trail -%}
				{%- include 'CCDNComponentCrumbTrailBundle:Trail:trail.html.twig' with {'crumbs': crumbs } -%}
			{%- endblock crumb_trail -%}
		</nav>
	</div>
{% endblock tool_bar %}



{% block sidebar %}
    {{ parent() }}

	{%- block sidebar_extra_top -%}{%- endblock sidebar_extra_top -%}
    {%- include 'CCDNComponentAttachmentBundle:Sidebar:sidebar.html.twig' -%}
	{%- block sidebar_extra_bottom -%}{%- endblock sidebar_extra_bottom -%}

{% endblock %}



{% block body %}
	{%- spaceless -%}

	{%- include 'CCDNComponentCommonBundle:Flashes:flashes.html.twig' -%}

	{%- block body_content -%}
	{%- endblock body_content -%}

	{%- block body_footer -%}
		{%- include 'CCDNComponentAttachmentBundle:Footer:footer.html.twig' -%}
	{%- endblock body_footer -%}

	{%- endspaceless -%}
{% endblock body %}
